{% extends 'Front/base.html.twig' %}

{% block title %}Cr√©er un nouveau article{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.quilljs.com/1.3.6/quill.snow.css">
{% endblock %}

{% block body %}
    <div class="container mb-50">
        {{ form_start(form) }}
        {{ form_label(form.image) }}
        {{ form_widget(form.image) }}
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_label(form.content) }}
        {{ form_widget(form.content) }}
        {{ form_label(form.tags) }}
        {{ form_widget(form.tags) }}
        <div class="mt-3">
            {{ form_label(form.public) }}
            {{ form_widget(form.public) }}
        </div>

        <button id="article" type="submit" class="btn btn-success mt-3">Publier mon article</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.min.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        let quill = new Quill('#editor', {
            modules: {
                toolbar: [
                    ['bold', 'italic', 'underline'],        // toggled buttons
                    ['blockquote', 'code-block'],
                    [{ 'header': 1 }, { 'header': 2 }],               // custom button values
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'script': 'sub'}, { 'script': 'super' }],      // superscript/subscript
                    [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
                    [{ 'color': [] }],          // dropdown with defaults from theme
                    [{ 'align': [] }],
                    ['link', 'image']

                ]
            },
            theme: 'snow',  // Specify theme in configuration
            placeholder: 'Content de article...',
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#article').click(function(){
                $.ajax({
                    url: "{{ path('article_add') }}",
                    method: "POST",
                    data: {
                        content : $('.ql-editor').html()
                    },
                    success: function()
                    {

                    },
                });
            });
        });
    </script>
{% endblock %}



