<div class="mr-4">
    <a
            class="nav-link"
            href="#"
            id="navbarDropdownMenuLink"
            role="button"
            data-toggle="dropdown"
            aria-expanded="false"
    >
        <i class="fas fa-bell"></i>
        <span class="badge rounded-pill badge-notification bg-danger">
                                {{ notificationLength }}
                            </span>
    </a>

    <div class="dropdown-menu dropdown-menu-right" style="width: 300px">
        {% if notificationLength == 0 %}
            <p class="p-2 mb-0">Vous n'avez pas de notification.</p>
        {% endif %}
        <div class="m-3">
            <p class="text-center">Vous avez
                <strong>{{ notificationLength }}</strong>
                nouvelle(s) notification(s)
            </p>
        </div>
        {% for notification in NotificationService.getNotification['Notification'] %}
            <div class="bg-grey">
                <div class="d-flex align-items-center bg-grey">
                    <div class="p-3">
                        <img src="https://picsum.photos/id/237/200/200" alt="" class="avatar-radius avatar-notification">
                    </div>
                    <p class="mb-0"><strong>{{ notification.sender.username }}</strong> vient de s'abonner !</p>
                </div>
                <div class="d-flex justify-content-end mr-4">
                    <div id="notification-date" class="font-size-date mr-2">{{ notification.createdAt | date('Y-m-d H:i:s') }}</div>
                    <i class="fas fa-clock"></i>
                </div>
                <div class="d-flex justify-content-center">

                    <hr style="width: 300px">
                </div>
            </div>
        {% endfor %}
    </div>

</div>